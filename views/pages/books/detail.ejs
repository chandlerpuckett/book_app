<section>
  <ul>
    <% books.forEach(book => { %>
    <li>
      <h2><%= book.title %></h2>
      <h3><%= book.author %></h3>
      <p>ISBN : <%= book.isbn %></p>
      <img src="<%= book.image_url %>">
      <p><%= book.synopsis %></p>

      <form action="/books/:id" method="GET" name="detail">
        <button id="detail" name="detail" value="<%= book.id %>">VIEW DETAILS</button>
      </form>

      <form action="/books" method="POST" name="save">
        <input name="title" type="hidden" value="<%= book.title %>">
        <input name="author" type="hidden" value="<%= book.author %>">
        <input name="isbn" type="hidden" value="<%= book.isbn %>">
        <input name="image_url" type="hidden" value="<%= book.image_url %>">
        <input name="synopsis" type="hidden" value="<%= book.synopsis %>">
        <button type="submit" name="save">SAVE</button>
      </form>

    </li>
    <% }) %>
  </ul>
</section>